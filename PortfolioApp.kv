WindowManager:
    MainWindow:
    Login:
    Signup:
    Signupsuccess:
    Information:
    StartScreen11:
    Data:
    

<MainWindow>:
    name: "MainPage"
    
    FloatLayout:
        # gridlayout for top "row" app name / introduction 
        GridLayout:  
            rows: 1 
            pos_hint: {"top": 1, "left": 1}
            size_hint: 1, 0.2
            # put label and app logo here
            Label:
                text: "FRIED BRAINS"
                background_color: (0/255,191/255,255/255,1)
                font_size: 30
                canvas.before:
                    Color:
                        rgba: self.background_color
                    Rectangle:
                        size: self.size
                        pos: self.pos
                color: (0,0,0,1)

        GridLayout:  
            rows: 1 
            pos_hint: {"top": 0.75, "left": 1}
            size_hint: 1, 0.4
            Image:
                source: "images/brainIcon.png" 
                size_hint_x: 0.4
                allow_stretch: True
    
        GridLayout:   
            rows: 1
            pos_hint: {"top": 0.2, "left": 1}
            size_hint: 1, 0.1
            # put buttons here
            Button:
                text: "Login"
                font_size: 20 
                size_hint: 0.5,0.5 
                background_normal: ''
                background_color: (0,187/256,255/256,0.2) 
                color: (0,0,0,1)
                on_release: 
                    app.root.current = "Login"
                    root.manager.transition.direction = "left"

            Button:
                text: "Sign Up"
                font_size: 20
                size_hint: 0.5,0.5 
                background_normal: ''
                background_color: (3/256,219/256,255/256,0.69) 
                color: (0,0,0,1)
                on_release:
                    app.root.current = "Signup"
                    root.manager.transition.direction = "right"
        
        GridLayout:
            rows: 1
            pos_hint: {"top": 0.1, "left": 1}
            size_hint: 1, 0.1

            Button:
                text: "Methodology"
                font_size: 20
                color: (0,0,0,1)
                background_normal: ''
                background_color: (3/256,219/256,255/256,0.25)  
                on_release:
                    app.root.current = "Information"
                    root.manager.transition.direction = "up"

<Login>:
    name: "Login"
    canvas.before:
        Color:
            rgba: (92/256,206/256,251/256,0.58)
        Rectangle:
            pos: self.pos
            size: self.size
    FloatLayout:
        # gridlayout for top "row" app name / introduction 
        MDBoxLayout:
            orientation: 'vertical'
            padding: "270dp"
            spacing: "20dp"
            size: root.width, root.height
            
            MDLabel:
                id: welcome_label
                text: "WELCOME"
                font_size: 30
                halign: 'center'
                size_hint_y: None
                height: self.texture_size[1]

            MDLabel:
                id: welcome_label
                text: ""
                font_size: 30
                halign: 'center'
                size_hint_y: None
                height: self.texture_size[1]

            MDLabel:
                id: login_label
                text: "Login Below"
                font_size: 20
                halign: 'center'
                height: self.texture_size[1]

            MDLabel:
                id: welcome_label
                text: ""
                font_size: 30
                halign: 'center'
                size_hint_y: None
                height: self.texture_size[1]

            MDTextField:
                id: user
                pos_hint: {"center_x": 0.5, "center_y": 0.5}
                hint_text: 'Enter username'
                helper_text:'Required'
                helper_text_mode:  'on_error'
                icon_right: 'account'
                size_hint_x: None
                width: 300
                font_size: 18
                color_mode: 'custom'
                line_color_focus: 1, 1, 1, 1
                required: True 
                mode: 'rectangle'

            MDTextField:
                id: pw
                hint_text: 'Enter password'
                helper_text: 'Required'
                helper_text_mode: 'on_error'
                icon_right: 'eye-off'
                size_hint_x: None
                width: 300
                font_size: 18
                pos_hint: {"center_x": 0.5, "center_y": 0.5}
                color_mode: 'custom'
                line_color_focus: 1, 1, 1, 1
                password: True
                required: True
                mode: "rectangle"

        GridLayout:  
            rows: 1 
            pos_hint: {"top": 0.3, "right": 0.58}
            size_hint: 0.15, 0.06
            
            Button:
                text: "Return Home"
                size_hint: (0.5,0.2)
                pos_hint: {'center_x':.7, 'center_y':.5}
                font_size: 16
                color: (0,0,0,1)
                background_normal: ''
                background_color: (141/256,180/256,187/256,0.25)  
                on_release:
                    app.root.current = "MainPage"
                    root.manager.transition.direction = "up"

        GridLayout:  
            rows: 1 
            pos_hint: {"top": 0.2, "right": 0.58}
            size_hint: 0.15, 0.06
            
            Button:
                text: "Submit"
                size_hint: (0.5,0.2)
                pos_hint: {'center_x':.7, 'center_y':.5}
                font_size: 16
                color: (0,0,0,1)
                background_normal: ''
                background_color: (141/256,180/256,187/256,0.25) 
                on_press:
                    app.login()
                    app.username_changer()

